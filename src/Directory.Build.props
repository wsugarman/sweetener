<Project>

  <!-- Common Locations -->
  <PropertyGroup>
    <SrcDirectory>$(MSBuildThisFileDirectory)</SrcDirectory>
    <CoreDirectory>$(SrcDirectory)Core\</CoreDirectory>
    <ExtensionsDirectory>$(SrcDirectory)Extensions\</ExtensionsDirectory>
    <ResourcesDirectory>$(SrcDirectory)Resources\</ResourcesDirectory>
    <SharedDirectory>$(SrcDirectory)Shared\</SharedDirectory>
  </PropertyGroup>

  <!-- Common Assembly and Build Properties -->
  <PropertyGroup>
    <AssemblyOriginatorKeyFile>$(ResourcesDirectory)Public.snk</AssemblyOriginatorKeyFile>
    <Copyright>Copyright Â© 2022 William Sugarman.</Copyright>
    <Deterministic>true</Deterministic>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <LangVersion>latest</LangVersion>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
    <Nullable>enable</Nullable>
    <Product>Sweetener</Product>
    <RunSettingsFilePath>$(SrcDirectory)CodeCoverage.runsettings</RunSettingsFilePath>
    <SignAssembly>true</SignAssembly>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
  </PropertyGroup>

  <!-- Code Analyzers -->
  <PropertyGroup>
    <AnalysisLevel>latest-All</AnalysisLevel>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
  </PropertyGroup>

  <!-- Support for new .NET/C# Features in .NET Standard 2.0 -->
  <ItemGroup>
    <Compile Include="$(SharedDirectory)IsExternalInit.cs" Visible="false" />
    <Compile Include="$(SharedDirectory)NullableAttributes.cs" Visible="false" />
  </ItemGroup>

  <!-- Tools -->
  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" PrivateAssets="All" />
  </ItemGroup>

  <!-- Below are items and properties that vary between projects -->
  <!-- Common framework and tooling PackageReference elements are also kept in sync here -->
  <Choose>
    <When Condition="'$(MSBuildProjectName)' == 'Sweetener.SourceGeneration'">

      <!-- Do not sign the assembly -->
      <PropertyGroup>
        <AssemblyOriginatorKeyFile></AssemblyOriginatorKeyFile>
        <SignAssembly>false</SignAssembly>
        <TargetFramework>netstandard2.0</TargetFramework>
      </PropertyGroup>

      <!-- Not CLS Compliant -->
      <ItemGroup>
        <AssemblyAttribute Include="System.CLSCompliantAttribute ">
          <_Parameter1>false</_Parameter1>
          <_Parameter1_TypeName>System.Boolean</_Parameter1_TypeName>
        </AssemblyAttribute>
      </ItemGroup>

    </When>
    <When Condition="$(MSBuildProjectName.EndsWith('Test'))">

      <!-- Unit Test Properties -->
      <PropertyGroup>
        <IsPackable>false</IsPackable>
        <PublicSign>true</PublicSign>
        <TargetFramework>net6.0</TargetFramework>
      </PropertyGroup>

      <!-- Test Framework Packages -->
      <ItemGroup>
        <PackageReference Include="coverlet.collector" PrivateAssets="All" />
        <PackageReference Include="Microsoft.NET.Test.Sdk" PrivateAssets="All" />
        <PackageReference Include="MSTest.TestAdapter" PrivateAssets="All" />
        <PackageReference Include="MSTest.TestFramework" />
      </ItemGroup>

      <!-- Test File Analyzer Suppressions -->
      <ItemGroup>
        <Compile Include="$(SharedDirectory)GlobalTestSuppressions.cs" Visible="false" />
      </ItemGroup>

    </When>
    <Otherwise>

      <!-- Assembly and Build Properties -->
      <PropertyGroup>
        <DelaySign>true</DelaySign>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <IncludeSymbols>true</IncludeSymbols>
        <!-- NU5105: We're purposefully using SemVer 2.0 -->
        <NoWarn>$(NoWarn);NU5105</NoWarn>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <SkipDefaultEditorConfigAsAdditionalFile>true</SkipDefaultEditorConfigAsAdditionalFile>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <TargetFramework>netstandard2.0</TargetFramework>
      </PropertyGroup>

      <!-- NuGet metadata -->
      <PropertyGroup>
        <Authors>William Sugarman</Authors>
        <PackageIcon>Sweetener.png</PackageIcon>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReleaseNotes>https://wsugarman.github.io/Sweetener/Release-Notes/$(MSBuildProjectName)</PackageReleaseNotes>
        <MinClientVersion>4.9.0</MinClientVersion>
      </PropertyGroup>

      <!-- Resource Files -->
      <ItemGroup>
        <None Include="$(ResourcesDirectory)Sweetener.png" Pack="true" PackagePath="\" Visible="false" />
      </ItemGroup>

      <!-- Static Assembly Info -->
      <ItemGroup>
        <Compile Include="$(SharedDirectory)AssemblyInfo.cs">
          <Link>Properties\AssemblyInfo.cs</Link>
        </Compile>
      </ItemGroup>

      <!-- Dynamic Assembly Info -->
      <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
          <_Parameter1>$(MSBuildProjectName).Test, </_Parameter1>
          <_Parameter1_TypeName>System.String</_Parameter1_TypeName>
        </AssemblyAttribute>
      </ItemGroup>

    </Otherwise>
  </Choose>

</Project>
